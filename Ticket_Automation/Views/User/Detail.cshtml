@model User

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container py-4">
    <div class="row g-4 align-items-stretch">
        <!-- Kullanıcı Bilgileri -->
        <div class="col-lg-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body">
                    <i class="fas fa-user-circle fa-5x text-secondary mb-3"></i>
                    <h4 class="fw-bold">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted mb-1"><i class="fas fa-envelope me-2"></i>@Model.Email</p>
                    <p class="text-muted mb-2"><i class="fas fa-phone me-2"></i>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)</p>
                    <span class="badge bg-primary px-3 py-2 fs-6">@Model.Role.ToString()</span>
                </div>
            </div>
        </div>

        <!-- Özet Kartları -->
        <div class="col-lg-8">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card shadow-sm border-info">
                        <div class="card-body text-center">
                            <h6 class="text-muted">Oluşturulan Talepler</h6>
                            <h2 class="fw-bold text-info">@Model.CreatedTickets.Count()</h2>
                        </div>
                    </div>
                </div>
                @if (Model.Role != UserRole.Customer)
                {
                    <div class="col-md-6">
                        <div class="card shadow-sm border-success">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Atanan Talepler</h6>
                                <h2 class="fw-bold text-success">@Model.AssignedTickets.Count()</h2>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-md-12">
                    <div class="card shadow-sm border-warning">
                        <div class="card-body">
                            <h6 class="text-muted mb-3">Bildirimler (@Model.Notifications.Count())</h6>
                            <ul class="list-group list-group-flush" style="max-height: 200px; overflow-y: auto;">
                                @if (Model.Notifications.Any())
                                {
                                    @foreach (var n in Model.Notifications.OrderByDescending(x => x.CreatedAt).Take(5))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div><i class="fas fa-bell me-2 text-warning"></i> @n.NotificationType</div>
                                            <small class="text-muted">@n.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item text-center text-muted">Hiç bildirim yok</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detaylı Ticket Listeleri -->
    <div class="row g-4 mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white">Oluşturduğu Talepler</div>
                <ul class="list-group list-group-flush" style="max-height: 250px; overflow-y: auto;">
                    @if (Model.CreatedTickets.Any())
                    {
                        @foreach (var t in Model.CreatedTickets)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a class="fw-semibold text-decoration-none" asp-controller="Ticket" asp-action="Detail" asp-route-id="@t.Id">@t.Title</a>
                                <span class="badge bg-@GetStatusColor(t.Status)">@t.Status</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center text-muted">Hiç oluşturulan talep yok</li>
                    }
                </ul>
            </div>
        </div>

        @if (Model.Role != UserRole.Customer)
        {
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white">Atanan Talepler</div>
                    <ul class="list-group list-group-flush" style="max-height: 250px; overflow-y: auto;">
                        @if (Model.AssignedTickets.Any())
                        {
                            @foreach (var t in Model.AssignedTickets)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a class="fw-semibold text-decoration-none" asp-controller="Ticket" asp-action="Detail" asp-route-id="@t.Id">@t.Title</a>
                                    <span class="badge bg-@GetStatusColor(t.Status)">@t.Status</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-center text-muted">Hiç atanan talep yok</li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    private string GetStatusColor(TicketStatus status)
    {
        return status switch
        {
            TicketStatus.Open => "primary",
            TicketStatus.Solved => "success",
            TicketStatus.Closed => "danger",
            _ => "secondary"
        };
    }
}
